<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd"
	version="2.1">

	<display-name>PersonnelDepartment</display-name>
	<enterprise-beans>
		<session>
			<display-name>EmployeeControllerBean</display-name>
			<ejb-name>EmployeeControllerBean</ejb-name>
			<home>org.nc.core.redistributable.remote.EmployeeControllerHome</home>
			<remote>org.nc.core.redistributable.remote.EmployeeController</remote>
			<ejb-class>org.nc.core.session.EmployeeControllerBean</ejb-class>
			<session-type>Stateless</session-type>
			<transaction-type>Bean</transaction-type>
			<ejb-local-ref>
				<ejb-ref-name>ejb/Position</ejb-ref-name>
				<ejb-ref-type>Entity</ejb-ref-type>
				<local-home>org.nc.core.entity.PositionHome</local-home>
				<local>org.nc.core.entity.Position</local>
				<ejb-link>testtask_core_cmp.jar#PositionBean</ejb-link>
			</ejb-local-ref>
			<ejb-local-ref>
				<ejb-ref-name>ejb/Employee</ejb-ref-name>
				<ejb-ref-type>Entity</ejb-ref-type>
				<local-home>org.nc.core.entity.EmployeeHome</local-home>
				<local>org.nc.core.entity.Employee</local>
				<ejb-link>testtask_core_cmp.jar#EmployeeBean</ejb-link>
			</ejb-local-ref>
			<resource-ref>
				<res-ref-name>jdbc/PersonnelDepartmentDS</res-ref-name>
				<res-type>javax.sql.DataSource</res-type>
				<res-auth>Container</res-auth>
				<res-sharing-scope>Shareable</res-sharing-scope>
			</resource-ref>
			<security-identity>
				<description></description>
				<use-caller-identity />
			</security-identity>
		</session>
		<entity>
			<display-name>PositionBean</display-name>
			<ejb-name>PositionBean</ejb-name>
			<local-home>org.nc.core.entity.PositionHome</local-home>
			<local>org.nc.core.entity.Position</local>
			<ejb-class>org.nc.core.entity.PositionBean</ejb-class>
			<persistence-type>Container</persistence-type>
			<prim-key-class>java.lang.Long</prim-key-class>		
			<reentrant>false</reentrant>
			<cmp-version>2.x</cmp-version>
			<abstract-schema-name>Position</abstract-schema-name>
			<cmp-field>
				<field-name>id</field-name>
			</cmp-field>
			<cmp-field>
				<field-name>positionName</field-name>
			</cmp-field>
			<primkey-field>id</primkey-field>
			<query>
				<query-method>
					<method-name>findByName</method-name>
					<method-params>
						<method-param>java.lang.String</method-param>
					</method-params>
				</query-method>
				<ejb-ql>
					SELECT OBJECT(p) FROM Position p where p.positionName = ?1
				</ejb-ql>
			</query>
			<query>
				<query-method>
					<method-name>findAll</method-name>
					<method-params/>
				</query-method>
				<ejb-ql>
					SELECT OBJECT(p) FROM Position p
				</ejb-ql>
			</query>			
		</entity>
		<entity>
			<display-name>EmployeeBean</display-name>
			<ejb-name>EmployeeBean</ejb-name>
			<local-home>org.nc.core.entity.EmployeeHome</local-home>
			<local>org.nc.core.entity.Employee</local>
			<ejb-class>org.nc.core.entity.EmployeeBean</ejb-class>
			<persistence-type>Container</persistence-type>
			<prim-key-class>java.lang.Long</prim-key-class>
			<reentrant>false</reentrant>
			<cmp-version>2.x</cmp-version>
			<abstract-schema-name>Employee</abstract-schema-name>
			<cmp-field>
				<field-name>id</field-name>
			</cmp-field>
			<cmp-field>
				<field-name>firstname</field-name>
			</cmp-field>
			<cmp-field>
				<field-name>lastname</field-name>
			</cmp-field>
			<cmp-field>
				<field-name>middlename</field-name>
			</cmp-field>
			<cmp-field>
				<field-name>phones</field-name>
			</cmp-field>
			<cmp-field>
				<field-name>salary</field-name>
			</cmp-field>
			<primkey-field>id</primkey-field>			
			<query>
				<query-method>
					<method-name>findByPartOfNameOrPosition</method-name>
					<method-params>
						<method-param>java.lang.String</method-param>
					</method-params>
				</query-method>
				<ejb-ql>
					SELECT DISTINCT OBJECT(e) FROM Employee e
					WHERE e.firstname like ?1 OR e.lastname like ?1  
						OR e.middlename like ?1 OR e.position.positionName like ?1
				</ejb-ql>
			</query>
			<query>
				<query-method>
					<method-name>findAll</method-name>
					<method-params/>
				</query-method>
				<ejb-ql>
					SELECT OBJECT(e) FROM Employee e
				</ejb-ql>
			</query>
		</entity>
	</enterprise-beans>
	<relationships>
		<ejb-relation>
			<ejb-relationship-role>
				<ejb-relationship-role-name>EmployeeBean</ejb-relationship-role-name>
				<multiplicity>Many</multiplicity>
				<relationship-role-source>
					<ejb-name>EmployeeBean</ejb-name>
				</relationship-role-source>
				<cmr-field>
					<cmr-field-name>position</cmr-field-name>
				</cmr-field>
			</ejb-relationship-role>	
			<ejb-relationship-role>
				<ejb-relationship-role-name>PositionBean</ejb-relationship-role-name>
				<multiplicity>One</multiplicity>
				<relationship-role-source>
					<ejb-name>PositionBean</ejb-name>
				</relationship-role-source>
			</ejb-relationship-role>		
		</ejb-relation>
	</relationships>
	<assembly-descriptor>
		<container-transaction>
			<method>
				<ejb-name>PositionBean</ejb-name>
				<method-intf>LocalHome</method-intf>
				<method-name>create</method-name>
				<method-params>
					<method-param>java.lang.String</method-param>
				</method-params>
			</method>
			<trans-attribute>Required</trans-attribute>
		</container-transaction>
		<container-transaction>
			<method>
				<ejb-name>PositionBean</ejb-name>
				<method-intf>LocalHome</method-intf>
				<method-name>findByPrimaryKey</method-name>
				<method-params>
					<method-param>java.lang.Long</method-param>
				</method-params>
			</method>
			<trans-attribute>Required</trans-attribute>
		</container-transaction>
		<container-transaction>
			<method>
				<ejb-name>PositionBean</ejb-name>
				<method-intf>LocalHome</method-intf>
				<method-name>remove</method-name>
				<method-params>
					<method-param>java.lang.Object</method-param>
				</method-params>
			</method>
			<trans-attribute>Required</trans-attribute>
		</container-transaction>
		<container-transaction>
			<method>
				<ejb-name>PositionBean</ejb-name>
				<method-intf>Local</method-intf>
				<method-name>remove</method-name>
				<method-params />
			</method>
			<trans-attribute>Required</trans-attribute>
		</container-transaction>
		<container-transaction>
			<method>
				<ejb-name>PositionBean</ejb-name>
				<method-intf>Local</method-intf>
				<method-name>getPositionName</method-name>
				<method-params />
			</method>
			<trans-attribute>Required</trans-attribute>
		</container-transaction>
		<container-transaction>
			<method>
				<ejb-name>PositionBean</ejb-name>
				<method-intf>Local</method-intf>
				<method-name>setPositionName</method-name>
				<method-params>
					<method-param>java.lang.String</method-param>
				</method-params>
			</method>
			<trans-attribute>Required</trans-attribute>
		</container-transaction>
	</assembly-descriptor>
</ejb-jar>