<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.5"
 xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
 <display-name>testtask_web</display-name>
 <filter>
  <filter-name>EncodingFilter</filter-name>
  <filter-class>org.nc.web.EncodingFilter</filter-class>
 </filter>
 <filter>
  <filter-name>EmployeeEditParameterFilter</filter-name>
  <filter-class>org.nc.web.EmployeeEditParameterFilter</filter-class>
 </filter>
 <filter>
  <filter-name>EmployeeListSearchFilter</filter-name>
  <filter-class>org.nc.web.EmployeeListSearchFilter</filter-class>
 </filter>
 <filter-mapping>
  <filter-name>EncodingFilter</filter-name>
  <url-pattern>/*</url-pattern>
  <dispatcher>REQUEST</dispatcher>
  <dispatcher>FORWARD</dispatcher>
 </filter-mapping>
 <filter-mapping>
  <filter-name>EmployeeEditParameterFilter</filter-name>
  <url-pattern>/employee/employeeEdit</url-pattern>
  <dispatcher>REQUEST</dispatcher>
  <dispatcher>FORWARD</dispatcher>
 </filter-mapping>
 <filter-mapping>
  <filter-name>EmployeeListSearchFilter</filter-name>
  <url-pattern>/employee/employeeList</url-pattern>
  <dispatcher>REQUEST</dispatcher>
  <dispatcher>FORWARD</dispatcher>
 </filter-mapping>
 <servlet>
  <display-name>employeeList</display-name>
  <servlet-name>employeeList</servlet-name>
  <jsp-file>/EmployeeList.jsp</jsp-file>
 </servlet>
 <servlet>
  <display-name>employeeView</display-name>
  <servlet-name>employeeView</servlet-name>
  <jsp-file>/EmployeeView.jsp</jsp-file>
 </servlet>
 <servlet>
  <display-name>employeeEdit</display-name>
  <servlet-name>employeeEdit</servlet-name>
  <jsp-file>/EmployeeEdit.jsp</jsp-file>
 </servlet>
 <servlet>
  <display-name>positionList</display-name>
  <servlet-name>positionList</servlet-name>
  <jsp-file>/PositionList.jsp</jsp-file>
 </servlet>
 <servlet>
  <display-name>SaveEmployeePrim</display-name>
  <servlet-name>SaveEmployeePrim</servlet-name>
  <servlet-class>org.nc.web.SaveEmployeePrim</servlet-class>
 </servlet>
 <servlet>
  <display-name>SaveEmployeeEnt</display-name>
  <servlet-name>SaveEmployeeEnt</servlet-name>
  <servlet-class>org.nc.web.SaveEmployeeEnt</servlet-class>
 </servlet>
 <servlet>
  <display-name>EmployeeDelete</display-name>
  <servlet-name>EmployeeDelete</servlet-name>
  <servlet-class>org.nc.web.EmployeeDelete</servlet-class>
 </servlet>
 <servlet>
  <display-name>error</display-name>
  <servlet-name>error</servlet-name>
  <jsp-file>/error.jsp</jsp-file>
 </servlet>
 <servlet-mapping>
  <servlet-name>employeeList</servlet-name>
  <url-pattern>/employee/employeeList</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>employeeView</servlet-name>
  <url-pattern>/employee/employeeView</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>employeeEdit</servlet-name>
  <url-pattern>/employee/employeeEdit</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>positionList</servlet-name>
  <url-pattern>/employee/positionList</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>SaveEmployeePrim</servlet-name>
  <url-pattern>/employee/saveEmployeePrim</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>SaveEmployeeEnt</servlet-name>
  <url-pattern>/employee/saveEmployeeEnt</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>EmployeeDelete</servlet-name>
  <url-pattern>/employee/employeeDelete</url-pattern>
 </servlet-mapping>
  <servlet-mapping>
  <servlet-name>error</servlet-name>
  <url-pattern>/error</url-pattern>
 </servlet-mapping>
 <welcome-file-list>
  <welcome-file>index.html</welcome-file>
  <welcome-file>index.htm</welcome-file>
  <welcome-file>index.jsp</welcome-file>
  <welcome-file>default.html</welcome-file>
  <welcome-file>default.htm</welcome-file>
  <welcome-file>default.jsp</welcome-file>
 </welcome-file-list>

 <ejb-ref>
  <ejb-ref-name>web/EmployeeController</ejb-ref-name>
  <ejb-ref-type>Session</ejb-ref-type>
  <home>org.nc.core.redistributable.remote.EmployeeControllerHome</home>
  <remote>org.nc.core.redistributable.remote.EmployeeController</remote>
 </ejb-ref>
</web-app>
